[osd.<%= @name %>]
   host = <%= @hostname %>
   devs = <%= @device %>
<% if @osd_journal_type == 'first_partition' -%>
  osd journal = <%= @journal_device %>
<% end -%>
<% if @cluster_addr -%>
   cluster addr = <%= @cluster_addr %>
<% end -%>
<% if @public_addr -%>
   public addr = <%= @public_addr %>
<% end -%>

