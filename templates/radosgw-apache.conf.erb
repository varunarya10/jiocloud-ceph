<VirtualHost *:80>
        ServerName <%= @fqdn %>
        ServerAdmin <%= @serveradmin_email %>
        DocumentRoot /var/www
	FastCgiExternalServer <%= @fastcgi_ext_script %> -socket <%= @fastcgi_ext_socket %>
	RewriteEngine On
	<% if @listen_ssl -%>
	RewriteCond %{HTTPS} off
	RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} 	
	<% end -%>
	RewriteRule ^/([a-zA-Z0-9-_.]*)([/]?.*) /s3gw.fcgi?page=$1&params=$2&%{QUERY_STRING} [E=HTTP_AUTHORIZATION:%{HTTP:Authorization},L]
<IfModule mod_fastcgi.c>
  <Directory /var/www>
    Options +ExecCGI
    AllowOverride All
    SetHandler fastcgi-script
    Order allow,deny
    Allow from all
    AuthBasicAuthoritative Off
  </Directory>
</IfModule>
</VirtualHost>
<% if @listen_ssl -%>
Listen 443
<IfModule mod_ssl.c>
<VirtualHost *:443>
	ServerAdmin <%= @serveradmin_email %>
	DocumentRoot /var/www
	RewriteEngine On
	RewriteRule ^/([a-zA-Z0-9-_.]*)([/]?.*) /s3gw.fcgi?page=$1&params=$2&%{QUERY_STRING} [E=HTTP_AUTHORIZATION:%{HTTP:Authorization},L]
	<Directory />
		Options FollowSymLinks
		AllowOverride None
	</Directory>
	ErrorLog ${APACHE_LOG_DIR}/error.log
	LogLevel warn
	CustomLog ${APACHE_LOG_DIR}/ssl_access.log combined
	SSLEngine on
	<% if @radosgw_cert_file -%>
	SSLCertificateFile    <%= @radosgw_cert_file %>
	<% end -%>
	<% if @radosgw_key_file -%>
	SSLCertificateKeyFile <%= @radosgw_key_file %>
    	<% end -%>
	<% if @radosgw_ca_file -%>
	SSLCertificateChainFile  <%= @radosgw_ca_file %>
	<% end -%>
	<FilesMatch "\.(cgi|shtml|phtml|php)$">
		SSLOptions +StdEnvVars
	</FilesMatch>
	<Directory /usr/lib/cgi-bin>
		SSLOptions +StdEnvVars
	</Directory>
	BrowserMatch "MSIE [2-6]" \
		nokeepalive ssl-unclean-shutdown \
		downgrade-1.0 force-response-1.0
	BrowserMatch "MSIE [17-9]" ssl-unclean-shutdown
  <IfModule mod_fastcgi.c>
    <Directory /var/www>
      Options +ExecCGI
      AllowOverride All
      SetHandler fastcgi-script
      Order allow,deny
      Allow from all
      AuthBasicAuthoritative Off
    </Directory>
  </IfModule>
</VirtualHost>
</IfModule>

<% end -%>
